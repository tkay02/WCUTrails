<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="38sp"
        android:padding="5dp"
        android:text="Sign Up"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp">
    </TextView>

    <TextView
        android:id="@+id/username_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias=".35"
        android:text="Enter Username:"
        android:textSize="26sp"
        android:layout_marginStart="10dp">
    </TextView>

    <EditText
        android:id="@+id/username_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/username_txt"
        android:textSize="24sp"
        app:hintEnabled="false"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:ems="10">
    </EditText>

    <TextView
        android:id="@+id/password_one_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/username_edit"
        android:text="Enter Password:"
        android:textSize="26sp"
        android:layout_marginStart="10dp">
    </TextView>

    <EditText
        android:id="@+id/password_one_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/password_one_txt"
        android:textSize="24sp"
        app:hintEnabled="false"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:ems="10"
        android:inputType="textPassword">
    </EditText>

    <TextView
        android:id="@+id/password_two_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/password_one_edit"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="26sp"
        android:layout_marginStart="10dp"
        android:text="Enter Password Again:">
    </TextView>

    <EditText
        android:id="@+id/password_two_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/password_two_txt"
        android:textSize="24sp"
        app:hintEnabled="false"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:ems="10"
        android:inputType="textPassword">
    </EditText>

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="24dp"
        android:text="Create Account"
        android:layout_marginBottom="45dp">
    </Button>

    <!-- Use temporary to create admins/maintainers
    <Button
        android:id="@+id/create_admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/submit"
        android:text="Create Admin"
        android:textSize="24dp">
    </Button>
    Cancel the above to prevent users from becoming admins -->

</androidx.constraintlayout.widget.ConstraintLayout>