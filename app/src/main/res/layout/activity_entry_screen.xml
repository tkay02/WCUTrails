<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EntryScreen">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"
        android:text="Location Tracker"
        android:textAlignment="center"
        android:textSize="36sp"
        android:textColor="@color/black"
        android:padding="18dp">
    </TextView>

    <Switch
        android:id="@+id/database_switch"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="45dp"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        tools:ignore="UseSwitchCompatOrMaterialXml"
        android:text="Enable Tracking for Database"
        android:textSize="20sp">
    </Switch>

    <TextView
        android:id="@+id/title_for_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/database_switch"
        android:layout_marginTop="65dp"
        android:text="If enabled, enter name for database"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:padding="8dp">
    </TextView>

    <EditText
        android:id="@+id/database_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_for_edittext"
        android:hint="Database Name (include no spaces)"
        android:inputType="text"
        android:textAlignment="center"
        android:textSize="18sp">
    </EditText>

    <Button
        android:id="@+id/locate_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/demo_button"
        app:layout_constraintTop_toBottomOf="@id/database_name"
        android:text="Start Locating"
        android:textSize="25sp">
    </Button>

    <Button
        android:id="@+id/demo_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/locate_button"
        android:text="View Paths"
        android:textSize="25sp">
    </Button>

</androidx.constraintlayout.widget.ConstraintLayout>